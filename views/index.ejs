<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Javay's Self-help Book Collection</title>
    <link rel="stylesheet" href="/style.css"> 
</head>
<body>

<header>
    <h1>Javay J. Johnson's Self-help Book Store</h1>
    <nav>
        <a href="/">Home</a>
        <a href="/books">All Books</a>
    </nav>
</header>

<main class="main-content">
    <div class="books-grid">
        
        <div class="book-item">
            <img src="/images/Book1.jpg" alt="Book 1">
            <h3>Success Book</h3>
            <p>❤️ Likes: <%= books[0].likes %></p>
            <form action="/books/1/comments" method="POST">
                <textarea name="comment" placeholder="Leave a comment" required></textarea>
                <button type="submit">Submit</button>
            </form>
        </div>

        
        <div class="book-item">
            <img src="/images/Book2.jpg" alt="Book 2">
            <h3>Soul of a Winner</h3>
            <p>❤️ Likes: <%= books[1].likes %></p>
            <form action="/books/2/comments" method="POST">
                <textarea name="comment" placeholder="Leave a comment" required></textarea>
                <button type="submit">Submit</button>
            </form>
        </div>

        <div class="book-item">
            <img src="/images/Book3.jpg" alt="Book 3">
            <h3>Empowerment</h3>
            <p>❤️ Likes: <%= books[2].likes %></p>
            <form action="/books/3/comments" method="POST">
                <textarea name="comment" placeholder="Leave a comment" required></textarea>
                <button type="submit">Submit</button>
            </form>
        </div>
    </div>
</main>

<footer>
    <p>&copy; Copyright ©️ 2024 Javay Johnson, LLC All Rights Reserved Javay J. Johnson's Self-help Book Store</p>
</footer>

<script>
function likeBook(bookId) {
    fetch(`/books/${bookId}/like`, { method: 'POST' })
        .then(response => response.json())
        .then(data => {
            alert(`This book now has ${data.likes} likes!`);
        })
        .catch(error => console.error('Error:', error));
}
</script>

</body>
</html>
